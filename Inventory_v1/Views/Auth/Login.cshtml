
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .clsLoginWrapper {
            height: 500px;
            width: 400px;
            position: fixed;
            left: 0px;
            right: 0px;
            top: 0px;
            bottom: 0px;
            margin: auto;
        }
    </style>

    @{               
        string SessionUser = "";
        if (Session["Username"] != null)
        {
            SessionUser = Session["Username"].ToString();
        }
    }


    <script>
       // Show Login Success popup message and redirect to About or any page i want
        var username = '@SessionUser';
        if (username != '') {
            //alert("Login Success for user : " + username);
            window.location.href = "@Url.Action("Index", "DashBoard")";  
        }
        else {
            //alert("Login Failed. User: " + username);
        }
    </script>


</head>
<body>
    <div id="dvLoginWrapper" class="clsLoginWrapper">
        <div style="position: absolute; height: 300px; width: 90%;  left: 0px; right: 0px; top: 0px; bottom: 0px; margin: auto">

            <form method="post" action="@Url.Action("Login","Auth")">
                <div class="card"> 
                    <div class="card-header" style="text-align:center">
                        Login
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="txtUsername" class="form-control" id="username" placeholder="username">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="txtPassword" class="form-control" id="password" placeholder="password">
                        </div>
                        <input type="submit" class="btn btn-primary" value="Submit">
                    </div>
                </div>
            </form>            
        </div>
    </div>
   

</body>
</html>
